<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo de la barra -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <solid android:color="#E0E0E0" /> <!-- Color del fondo de la barra (gris claro) -->
        </shape>
    </item>
    <!-- Barra de progreso -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" /> <!-- Bordes redondeados, igual que el fondo -->
                <gradient
                    android:startColor="#00CC00"
                    android:endColor="#008800" />
                <!-- Color de inicio de la barra de progreso (verde) -->
                <!-- Color de fin de la barra de progreso (verde mÃ¡s oscuro) -->
            </shape>
        </clip>
    </item>
</layer-list>




